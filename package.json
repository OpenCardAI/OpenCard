{
  "name": "@opencard/sdk",
  "version": "0.0.1",
  "description": "Universal AI wallet SDK with React components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "esbuild src/index.js --bundle --format=esm --outfile=dist/index.mjs --external:react --external:react-dom && esbuild src/index.js --bundle --format=cjs --outfile=dist/index.js --external:react --external:react-dom",
    "dev": "npm run build -- --watch",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opencard/opencard.git"
  },
  "keywords": [
    "opencard",
    "ai",
    "wallet",
    "react",
    "sdk"
  ],
  "author": "OpenCard",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {},
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  }
}