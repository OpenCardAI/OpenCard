{
  "name": "@opencard/sdk",
  "version": "0.0.3",
  "description": "Universal AI wallet SDK with React components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "src/OpenCard.d.ts",
  "files": [
    "dist",
    "src/OpenCard.d.ts"
  ],
  "unpkg": "dist/browser.js",
  "jsdelivr": "dist/browser.js",
  "scripts": {
    "build": "npm run build:main && npm run build:server && npm run build:browser",
    "build:main": "esbuild src/index.js --bundle --format=esm --outfile=dist/index.mjs --external:react --external:react-dom --external:openai && esbuild src/index.js --bundle --format=cjs --outfile=dist/index.js --external:react --external:react-dom --external:openai",
    "build:server": "esbuild src/server.js --bundle --format=esm --outfile=dist/server.mjs --external:@ai-sdk/openai --external:next/headers && esbuild src/server.js --bundle --format=cjs --outfile=dist/server.js --external:@ai-sdk/openai --external:next/headers",
    "build:browser": "esbuild src/browser.js --bundle --format=iife --global-name=OpenCard --outfile=dist/browser.js --minify",
    "dev": "npm run build -- --watch",
    "demo": "serve -p 8080",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opencard/opencard.git"
  },
  "keywords": [
    "opencard",
    "ai",
    "wallet",
    "react",
    "sdk"
  ],
  "author": "OpenCard",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "openai": "^4.77.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "@ai-sdk/openai": {
      "optional": true
    }
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serve": "^14.2.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  }
}
